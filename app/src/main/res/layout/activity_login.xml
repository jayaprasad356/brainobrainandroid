<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/splash_app_name"
            android:textSize="@dimen/_30sdp"
            android:layout_marginVertical="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_100sdp"
            android:textColor="@color/primaryColor"
            android:src="@drawable/tilte_logo" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:text="Login"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold"></TextView>

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25sdp"
            android:background="@drawable/border"
            android:backgroundTint="#07000000"
            android:drawableStart="@drawable/ic_person"
            android:drawablePadding="@dimen/_7sdp"
            android:hint="Email"
            android:padding="@dimen/_14sdp" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25sdp"
            android:background="@drawable/border"
            android:backgroundTint="#07000000"
            android:drawableStart="@drawable/ic_lock"
            android:drawablePadding="@dimen/_7sdp"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="@dimen/_14sdp"></EditText>


        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/frgtpass"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:backgroundTint="@color/primaryColor"
            android:padding="@dimen/_14sdp"
            android:text="Login" />


    </LinearLayout>


</RelativeLayout>